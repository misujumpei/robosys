import sys
import argparse

def main():
    parser = argparse.ArgumentParser(description='TSVファイルの指定列の数値を集計します')
    parser.add_argument('--col', type=int, required=True, help='集計する列番号')
    args = parser.parse_args()

    col_idx = args.col - 1 # 1始まりを0始まりに
    total = 0.0
    
    for line in sys.stdin:
        parts = line.strip().split('\t')
        if len(parts) > col_idx:
            try:
                val = float(parts[col_idx])
                total += val
            except ValueError:
                pass
    
    print(total)

if __name__ == '__main__':
    main()
