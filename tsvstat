#!/usr/bin/env python3
import sys

col = None
args = sys.argv[1:]

if "--col" in args:
    i = args.index("--col")
    if i + 1 < len(args):
        col = int(args[i + 1]) - 1

total = 0.0
for line in sys.stdin:
    line = line.rstrip("\n")
    fields = line.split("\t")
    if col is not None and col < len(fields):
        total += float(fields[col])

print(total)

